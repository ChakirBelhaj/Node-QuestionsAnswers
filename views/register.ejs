<% include header.ejs %>
<div class="main container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="display-4 m-b-2"></h1>
            <!-- register form-->
            <form method="POST" action="/register">
                <div class="form-group">
                    <label for="username">username:</label>
                    <input class="form-control" id="username" type="text" value="king" name="username"/>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" id="password" type="password" value="ddd" name="password"/>
                </div>
                <div class="form-group">
                    <select name="role">
                        <option value="admin">admin</option>
                        <option value="user">user</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Sign up</button>
            </form><a href="/login">Already an account? log in!</a>
        </div>
    </div>
</div>
